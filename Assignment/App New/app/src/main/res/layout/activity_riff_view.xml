<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:weightSum="1">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff">


                <!-- Cover Image -->

                <ImageView
                    android:id="@+id/bannerPic"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner1" />



                <!-- Round image -->

                <ImageView
                    android:id="@+id/fadeImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:background="@color/bottom_black_bgcolor" />

                <ImageView
                    android:id="@+id/smallPic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pro2"
                    android:layout_marginTop="75dp"
                    android:layout_gravity="center"
                    />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:weightSum="1">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tom Cruise"
                    android:textSize="22dp"
                    android:textColor="@color/title_color"
                    android:layout_gravity="center"
                    android:id="@+id/riffName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Syracuse, New York"
                    android:layout_gravity="center"
                    android:textColor="@color/title_color"
                    android:textSize="14dp"
                    android:id="@+id/riffMood" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Syracuse, New York"
                    android:layout_gravity="center"
                    android:textColor="@color/title_color"
                    android:textSize="10sp"
                    android:id="@+id/riffLocation"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stars can't shine without darkness..."
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.65"
                    android:textAlignment="center"
                    android:id="@+id/riffDesc" />


            </LinearLayout>


            <Button
                android:text="PLAY RIFF"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/playButton"
                android:textColor="@color/edit_profile"
                android:background="@drawable/rounded"
                style="@style/Widget.AppCompat.ActionButton.Overflow"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="playRiff" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"
                android:layout_marginTop="40dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.52">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:id="@+id/riffLength" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Riff Length"
                        android:textSize="14dp"/>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>


                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#ACACAC"/>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/deleteBtn"
                android:background="@color/bottom_black_bgcolor"
                android:text="Delete Riff"
                android:layout_weight="0.57"
                android:onClick="deleteClick"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />


        </LinearLayout>



    </ScrollView>


</RelativeLayout>



